from art import logo
from replit import clear
# code was originally written in replit; clear command clears up the visible history of the output console to improve ui

def add(n1, n2):
  return n1 + n2
  
def subtract(n1, n2):
  return n1 - n2

def multiply(n1, n2):
  return n1 * n2

def divide(n1, n2):
  return n1 / n2

operations = {
  "+": add,
  "-": subtract,
  "*": multiply,
  "/": divide
}

def calculator():
  print(logo)
  not_stopped = True
  
  num1 = float(input("What's the first number?: "))
  
  for symbol in operations:
    print(symbol)
  
  while not_stopped == True:
    operation_symbol = input("Pick an operation: ")
    num2 = float(input("What's the next number?: "))
    
    function = operations[operation_symbol]
    answer = function(num1, num2)
    
    print(f"{num1} {operation_symbol} {num2} = {answer}")
  
    choice = input(f"Do you want to keep calculating with {answer}? Type 'y' if yes and type 'n' to start a new calculation: ").lower()
    if choice == 'y':
      num1 = answer
    else:
      not_stopped = False
      clear()
      calculator()
calculator()
